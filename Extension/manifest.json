{
  "name": "Page Redder",
  "description": "Make the current page red",
  "version": "2.0",
  "permissions": [
    "activeTab"
  ],
    "content_scripts": [
    {
      "permissions": ["http://dp.la"],
      "matches": ["*://*/*"],
      "js": ["jquery.js","dpla.js"],
       "css": ["dpla.css"]
    
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Make this page red"
  },
  "manifest_version": 2
}
